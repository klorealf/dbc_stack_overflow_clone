<div class="comments" data-id="<%= @comment.id %>">

  <div><%= @comment.upDownSum %></div>
  <a class="up-vote" href="#">Up!</a>
  <a class="down-vote" href="#">Down ;(</a><br>
  <div><%= @comment.text %></div>
  <div>Posted by: <%= @comment.author.twitter_handle %></div><br>

  <a class="reply" href="#">reply</a>
  <div class="reply" id="reply<%= @comment.id %>">
    <%= render "comment_form" %>
  </div>

  <hr>

  <div class="nested">
    <% @comment.replies.each do |comment| %>
      <% @comment = comment %>
      <%= render "show_comment" %>
    <% end %>
  </div>
</div>