<%= form_for Comment.new(parent: @comment, event: @event), html: {class: "hidden"}, class: "vote_button" do |f| %>
  <%= f.hidden_field :parent_id %>

  <%= f.hidden_field :event_id %>
  
  <%= f.text_area :text, class: "comment_textarea" %><br>
  <%= f.submit "Reply", class: "vote_button" %>
<% end %>